    					return ('<div class="alert alert-success"><i class="fa fa-exclamation-circle"></i>&nbsp'+ message +'<button type="button" class="close" data-dismiss="alert">&times;</button></div>');
    				}
    				break;
    
    			default :
    				return ('');
    		}
    }

